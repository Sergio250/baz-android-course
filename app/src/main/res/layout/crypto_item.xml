<?xml version="1.0" encoding="utf-8"?>

<!--suppress ALL -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,ContentDescription">

    <androidx.cardview.widget.CardView
        android:id="@+id/boxCryptoItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgCryptoLogo"
                android:layout_width="60dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.317" />

            <TextView
                android:id="@+id/txtCryptoName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                android:singleLine="true"
                android:text="Ethereum"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/cyan"
                app:layout_constraintEnd_toStartOf="@id/ivShareStore"
                app:layout_constraintStart_toEndOf="@id/imgCryptoLogo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtCryptoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/txtCryptoName"
                app:layout_constraintStart_toStartOf="@id/txtCryptoName"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/txtPriceHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                android:singleLine="true"
                android:text="Price"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/cyan"
                app:layout_constraintTop_toTopOf="@id/txtCryptoValue"
                app:layout_constraintEnd_toEndOf="@id/txtCryptoName" />

            <TextView
                android:id="@+id/txtMaxPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$10.00 mxn"
                android:textColor="@color/green"
                android:textSize="10sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/txtPriceHeader"
                app:layout_constraintEnd_toEndOf="@id/txtCryptoName"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/txtMinPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$10.00 mxn"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/txtMaxPriceValue"
                app:layout_constraintEnd_toEndOf="@id/txtCryptoName"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivShareStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>